    "version": "0.2.0",
    "configurations": [
        {
            "name": "rocketpool node",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/rocketpool",
            "args": ["-c=$HOME/.rocketpool/config04/config.yml", "-s=$HOME/.rocketpool/config04/settings.yml", "node"],
        },
        {
            "name": "rocketpool watchtower",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/rocketpool",
            "args": [
                "--config=$HOME/.rocketpool/config03/config.yml", 
                "--settings=$HOME/.rocketpool/config03/settings.yml", 
                "--password=$HOME/.rocketpool/config03/data/password", 
                "--wallet=$HOME/.rocketpool/config03/data/wallet", 
                "watchtower"
            ],
        },
        {
            "name": "rocketpool-cli minipool status",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/rocketpool-cli",
            "args": ["-c=$HOME/.rocketpool/config03", "minipool", "status"],
        },
    ]
}